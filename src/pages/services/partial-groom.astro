---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import partialgroom from "../../images/partial-groom.webp";
---

<Layout title="Services :: Partial Groom">
   <!-- Main -->
   <section id="main" class="container">
      <header>
         <h2>Partial Groom</h2>
         <!-- <p>A generic page for every non-generic situation.</p> -->
      </header>
      <div class="box">
         <span class="image featured"> <Image src={partialgroom} alt="" /></span>
         <h4>Includes:</h4>
         <ul class="paw">
            <li><i class="fa-solid fa-paw"></i>Massage bath</li>
            <li><i class="fa-solid fa-paw"></i>Facial wash</li>
            <li><i class="fa-solid fa-paw"></i>Hand blow out, brush out and de-shedding if needed</li>
            <li><i class="fa-solid fa-paw"></i>Nail clipper and file</li>
            <li><i class="fa-solid fa-paw"></i>Ear cleaning (Ear plucking is not include)</li>
            <li><i class="fa-solid fa-paw"></i>Teeth brush</li>
            <li><i class="fa-solid fa-paw"></i>Sanitation trim, face trim and feet trim</li>
            <li><i class="fa-solid fa-paw"></i>Cologne</li>
            <li><i class="fa-solid fa-paw"></i>Bandana or hair bows</li>
         </ul>

         <div class="prices">
            <p>Small dog (0 - 19 lbs) Starting at $105</p>
            <p>Medium dog (20 - 39 lbs) Starting at $125</p>
            <p>Large dog (40 - 59 lbs) Starting at $145</p>
            <p>Extra Large dog (Over 60 lbs) Starting at $165</p>
         </div>
      </div>
   </section>
</Layout>

<style>
   .prices p {
      font-size: larger;
      font-weight: 500;
      margin: 15px 0;
   }

   .image img {
      max-width: 100%;
      height: auto;
   }
</style>
