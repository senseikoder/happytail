<Layout title="Gallery :: Happy Tail Grooming">
   <!-- Main -->
   <section id="main" class="container large bg-wave">
      <header>
         <h2>Gallery</h2>
      </header>
      <div class="box gallery">
         {Array.from({ length: 74 }).map((_, index) => (

            <div class="image">
               <a href={pic[index].src} data-lightbox="gallery">
                  <Image src={pic[index]} alt="" />
               </a>
            </div>
         ))}
      </div>
   </section>
</Layout>

<style>
   .box {
      padding: 2rem;
   }

   .gallery {
      /* display: flex;
      flex-wrap: wrap;
      justify-content: center; */
      column-count: 4;
      column-gap: 10px;
   }

   .gallery img {
      max-width: 100%;
      height: auto;
   }

   .gallery .image {
      /* width: 21%;
      margin: 1rem; */
      margin: 0;
      display: grid;
      grid-template-rows: 1fr auto;
      margin-bottom: 10px;
      break-inside: avoid;
   }

   .image > img {
      grid-row: 1 / -1;
      grid-column: 1;
   }

   .image a {
      color: black;
      text-decoration: none;
   }

   @media (max-width: 768px) {
      .gallery {
         column-count: 2;
         column-gap: 5px;
      }
   }
</style>
